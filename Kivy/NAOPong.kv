#:kivy 1.0.9

<NAOPongBall>:
    size: 50, 50
    canvas:
        Color:
            rgb: 1, 1, 0.2
        Ellipse:
            pos: self.pos
            size: self.size
                
<NAOPongPaddle>:
    size: 25, 200
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<NAOPongGame>:
    ball: pong_ball
    player1: player_left
    player_nao: player_right

    canvas.before:
        Color:
            rgba: 0.1, 1, 0.1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
                
    Label:
        font_size: 40
        center_x: root.width / 4
        top: root.top - 10
        text: "You: " + str(root.player1.score)
            
    Label:
        font_size: 40
        center_x: root.width * 3 / 4
        top: root.top - 10  
        text: "NAO: " + str(root.player_nao.score)
            
    NAOPongBall:
        id: pong_ball
        center: self.parent.center
            
    NAOPongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        player_id: 5
            
    NAOPongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
        player_id: 6
        